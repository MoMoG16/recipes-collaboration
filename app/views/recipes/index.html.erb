<h2>Available Recipes</h2>

<!--search box -->
<div class="pull-right">       
      <%= form_tag("/recipes", method: "get", role: "search", class: "navbar-form navbar-left") do %>
        <div class ="form-group">
          <%= text_field_tag(:search, nil, placeholder: "Search for a Recipe", class: "form-control input-sm") %>
        </div>
      <%= submit_tag("Go", class: "btn btn-default btn-xs") %>
      <% end %> <!--ends search bar-->
      <%= link_to 'Show All', recipes_path, class: "btn btn-default btn-xs" %>
  </div> <!--pull-right-->
  <!--end search box-->

    <div class="row">
      <% @recipes.each do |recipe| %>
        <div class="col-sm-6">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><%= recipe.title %></h3>
          </div> <!-- panel-heading -->
          <div class="panel-body">
            <h5>Ingredients:</h5>
            <%= recipe.ingredients %><br><br>
            <h6>Steps:</h6>
            <%= recipe.steps %>
          </div> <!-- panel-body -->
          <div class="panel-footer">
            <%= link_to content_tag(:i, nil, class: "fa fa-eye"), recipe %>
            <%= link_to content_tag(:i, nil, class: "fa fa-pencil"), edit_recipe_path(recipe) %>
            <%= link_to content_tag(:i, nil, class: "fa fa-trash-o"), recipe, method: :delete, data: { confirm: 'Are you sure?' } %>
          </div> <!-- panel-footer -->
        </div>
        </div>
      <% end %>
    </div>

<br>

<%= link_to 'New Recipe', new_recipe_path, class: "btn btn-default" %>
